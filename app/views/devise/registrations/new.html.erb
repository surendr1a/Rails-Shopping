<div class="flex min-h-screen items-center justify-center bg-gray-100">
  <div class="w-full max-w-sm bg-white/30 backdrop-blur-lg p-6 rounded-xl shadow-lg border border-white/20">
    <h2 class="text-2xl font-bold text-center text-gray-900">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-4 space-y-4") do |f| %>

      <!-- Display Error Messages if any -->
      <% if resource.errors.any? %>
        <div class="mb-4">
          <ul class="text-sm text-red-500">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Name Field -->
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <!-- Role Field -->
      <div>
        <%= f.label :role, class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :role, ['admin', 'customer', 'seller'], {}, 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <!-- Address Field -->
      <div>
        <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :address, autocomplete: "address", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <!-- Email Field -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <!-- Password Field -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <!-- Password Confirmation Field -->
      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= f.submit "Sign up", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition" %>
      </div>

    <% end %>

    <div class="text-center mt-4 text-sm text-gray-700">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
