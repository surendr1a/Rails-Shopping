<div class="flex min-h-screen items-center justify-center bg-gray-100">
  <div class="w-full max-w-sm bg-white/30 backdrop-blur-lg p-6 rounded-xl shadow-lg border border-white/20">
    <h2 class="text-2xl font-bold text-center text-gray-900">Log in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt-4 space-y-4") do |f| %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 rounded text-blue-600" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition" %>
      </div>

    <% end %>

    <div class="text-center mt-4 text-sm text-gray-700">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
