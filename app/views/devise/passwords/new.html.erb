<div class="flex min-h-screen items-center justify-center bg-gray-100">
  <div class="w-full max-w-sm bg-white/30 backdrop-blur-lg p-6 rounded-xl shadow-lg border border-white/20">
    <h2 class="text-2xl font-bold text-center text-gray-900">Forgot your password?</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "mt-4 space-y-4") do |f| %>
      
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-4 py-2 mt-1 border rounded-lg focus:ring-2 focus:ring-blue-400 bg-gray-50 shadow-sm" %>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 mt-2 rounded-lg transition" %>
      </div>

    <% end %>

    <div class="text-center mt-4 text-sm text-gray-700">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
