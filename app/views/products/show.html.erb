<div class="container mx-auto mt-10 px-4">
  <div class="flex flex-col lg:flex-row bg-white shadow-lg rounded-lg overflow-hidden">
    
    <!-- Product Image -->
    <div class="w-full lg:w-1/2">
      <% if @product.image.attached? %>
        <%= image_tag @product.image.variant(resize_to_limit: [500, 500]), class: "w-full h-auto object-cover rounded-lg" %>
      <% else %>
        <p class="text-gray-500 text-center py-20">No image available</p>
      <% end %>
    </div>

    <!-- Product Details -->
    <div class="w-full lg:w-1/2 p-6">
      <h1 class="text-3xl font-bold text-gray-900"><%= @product.name %></h1>
      <p class="text-gray-600 text-lg mt-2"><%= @product.description.presence || "No description available" %></p>
      
      <div class="mt-4">
        <p class="text-lg"><strong>Brand:</strong> <%= @product.brand.presence || "N/A" %></p>
        <p class="text-lg"><strong>SKU:</strong> <%= @product.sku.presence || "N/A" %></p>
        <p class="text-lg"><strong>Color:</strong> <%= @product.color.presence || "N/A" %></p>
        <p class="text-lg"><strong>Weight:</strong> <%= @product.weight.presence || "N/A" %> kg</p>
        <p class="text-lg"><strong>Stock:</strong> <%= @product.stock_quantity %> units</p>
      </div>

      <p class="mt-6 text-2xl font-semibold text-blue-500">â‚¹<%= @product.price %></p>

      <% if @product.stock_quantity.present? %>
        <!-- Add to Cart Button -->
        <%= button_to 'Add to Cart', carts_path(product_id: @product.id), method: :post, class: 'mt-4 bg-blue-500 text-white py-3 px-6 rounded hover:bg-blue-600 transition duration-200' %>
      <% else %>
        <p class="text-red-500 mt-4">This product is currently unavailable.</p>
      <% end %>
    </div>

  </div>
</div>
