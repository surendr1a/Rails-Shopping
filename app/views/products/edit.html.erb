<!-- app/views/products/edit.html.erb -->

<h1 class="text-3xl font-bold text-gray-800 mb-6">Edit Product</h1>

<%= form_for @product, html: { class: 'w-full max-w-lg mx-auto' } do |f| %>
  <div class="space-y-6">

    <!-- Product Name -->
    <div class="form-group">
      <%= f.label :name, class: 'block text-gray-700 text-sm font-medium' %>
      <%= f.text_field :name, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="form-group">
      <%= f.label :description, class: 'block text-gray-700 text-sm font-medium' %>
      <%= f.text_area :description, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500', rows: 4 %>
    </div>

    <div class="form-group">
      <%= f.label :price, class: 'block text-gray-700 text-sm font-medium' %>
      <%= f.number_field :price, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="form-group">
      <%= f.label :stock_quantity, class: 'block text-gray-700 text-sm font-medium' %>
      <%= f.number_field :stock_quantity, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

    <div class="form-group">
    <%= link_to 'Back', dashboard_path, class: 'bg-blue-500 text-white py-2 px-4 rounded-lg  hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
      <%= f.submit 'Save Changes', class: 'bg-blue-500 text-white py-2 px-4 rounded-lg justify-end hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
    </div>

  </div>
<% end %>

