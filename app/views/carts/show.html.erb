<%# <%= render 'shared/header' %> %>

<div class="container mx-auto mt-10">
  <h1 class="text-3xl font-bold text-center mb-6">Your Cart</h1>

  <% if @cart.cart_items.any? %>
    <div class="space-y-6">
      <% @cart.cart_items.each do |cart_item| %>
        <div class="flex items-center justify-between border-b pb-4">
          <div class="flex items-center">
            <%= image_tag cart_item.product.product_images.first&.image_url, class: 'w-24 h-24 object-cover rounded' %>
            <div class="ml-4">
              <h2 class="font-semibold"><%= cart_item.product.name %></h2>
              <p class="text-gray-600 text-sm"><%= number_to_currency(cart_item.product.price) %></p>
            </div>
          </div>
          <div class="flex items-center">
            <p class="text-lg font-semibold"><%= number_to_currency(cart_item.product.price * cart_item.quantity) %></p>
            <%= button_to 'Remove', cart_item_path(cart_item), method: :delete, class: 'ml-4 text-red-500' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6 text-right">
      <p class="text-xl font-semibold">Total: <%= number_to_currency(@cart.total_price) %></p>
      <%= link_to 'Proceed to Checkout', checkout_path, class: 'mt-4 inline-block bg-green-500 text-white py-2 px-6 rounded' %>
    </div>
  <% else %>
    <p>Your cart is empty!</p>
  <% end %>
</div>

<%# <%= render 'shared/footer' %> %>
